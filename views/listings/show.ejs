<% layout("./layouts/boilerplate.ejs") %>
<body>

 <script>
  let maptoken = "<%=process.env.MAP_TOKEN %>";
  let listing = <%- JSON.stringify(indidata) %>;
</script>

    
    <div class="row">
        
        <div class="col-8 offset-2">
            <h1><%= indidata.title %></h1>
      <img src="<%= indidata.image.url %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text"><b>Owned By :-<%= indidata.owner.username %></b> </p>
    <p class="card-text"><b><%= indidata.title %></b></p>
    <p class="card-text">  <%= indidata.description %>  </p>
    <p class="card-text">  &#8377;<%= Number(indidata.price).toLocaleString("en-IN") %></p>
    <p class="card-text"> <%= indidata.location %></p>
    <p class="card-text"><%= indidata.country %> </p>

    </p>
 
   
  </div>
  <% if(currentUser && currentUser._id.equals(indidata.owner.id)) { %>

  <div class="btns mb-4">
  <a href="/listings/<%=indidata._id %>/edit" class="btn btn-dark offset-3" style="background-color:red; width:90px;">Edit </a>
     
    <form method="post" action="/listings/<%=indidata._id%>">
        
        <button class="btn btn-dark offset-3">Delete</button>
    </form>
  </div>
  <% } %>
 
        </div>
    </div>
 
<div class="col-8 offset-2 mb-3 mt-3">
      
    <% if(currentUser || currentUser == "null") { %>
        <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%=indidata._id %>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-2 mt-2" >
            <div class="col-8 ">
<fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="rating" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
 </div>
        <div >
             <label for="rating" class="form-lable" >Rating</label>
            <textarea type="text" id="rating" class="form-control" name="review[comment]" required></textarea>
             <div class="invalid-feedback">please add some comments for review</div>
        </div>
 </div>
       
        <button class="btn btn-outline-dark">Submit</button>
    </form>
  <hr>
<% } %>
 
</div>


<% if (indidata.reviews.length > 0) { %>
  <div class="row offset-2">
    <h2>All Reviews:</h2>

    <% for (let i of indidata.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h2 class="card-title">@<%= i.author.username %></h2>
          <p class="starability-result" data-rating="<%= i.rating %>">
            Rated: <%= i.rating %> stars
          </p>
          <p><%= i.comment %></p>
        </div>

        <% if (currentUser) { %>
          <form class="mb-3" method="post" action="/listings/<%= indidata._id %>/reviews/<%= i._id %>?_method=DELETE">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        <% } %>
      </div>
    <% } %>
  </div>
<% } else { %>
  <p class="text-center">No reviews yet. Be the first to write one!</p>
<% } %>



<div class="col-8 offset-2  mb-3 mt-3">

  <h3>Where You Will Be</h3>
  <div id="map">
  </div>
</div>

<script src="/js/map.js"></script>

</body>
